#!/bin/sh
[[ ! -z $@ ]] && cd $@
# ls -la | tail -n +4 | awk '
ls -1ab | tail -n +3 | awk -v patched="$PATCHED_FONT" '
BEGIN {
  if (system("[[ -d ./.git ]]") == 0) {isrepo=1};
  RED="\033[01;31m";
  GREEN="\033[01;32m";
  YELLOW="\033[01;33m";
  BLUE="\033[01;34m";
  NONE="\033[0m";
};
{icon=""}
/\.yml|\.yaml/{icon="";}
/\.py/{icon="";}
/\.html/{icon="";}
{
  file=$0;
  status="";
  if (isrepo == 1) {
    command="git status -s \""file"\"";
    if ((command |& getline line) > 0) {
      status = substr(line, 1, 2);
      status = gensub("\\?\\?", RED"??"NONE, "g", status);
      status = gensub("(.+)(M|D)", "\\1"YELLOW"\\2"NONE, "g", status);
      status = gensub("^(A|M|D|R|C)(.*)", GREEN"\\1"NONE"\\2", "g", status);
    };
    close(command);
  };
  if (system("[[ -d \"./" file "\" ]]") == 0) {
    file=BLUE file NONE "/"
    icon=BLUE""NONE;
  }
  else if (system("[[ -x \"./" file "\" ]]") == 0)
    file=GREEN file NONE
  if(system("[[ -d \"./" $NF "/.git\" ]]") == 0)
    icon=BLUE""NONE;
  printf " %2s %s %-30s\n", status, (patched ? icon : " "), file;
};'

