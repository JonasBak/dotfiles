#!/bin/bash
RESP=$(cat <<EOF | wofi -din --width 500 --height 150
Lock
Logout
Reboot
Shutdown
EOF
);

case "$RESP" in
  Lock)
    IMAGE="$(find -L ~/.config/sway/wallpapers -type f | shuf -n 1 | xargs realpath)"
    swaymsg exec "swock -f -i \"$IMAGE\" --font \"InconsolataLGC Nerd Font Mono\""
    ;;
  Logout)
    swaymsg exit
    ;;
  Reboot)
    systemctl reboot
    ;;
  Shutdown)
    systemctl poweroff
    ;;
  *)
    exit 1
esac
