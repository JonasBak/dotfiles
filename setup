backup() {
  mv $1 $1.old
}

source_config_wpath(){
  echo "export DOTFILES=$PWD\nsource $PWD/$1" > ~/$2
}
source_config() {
  echo "source $PWD/$1" > ~/$2
}

source $PWD/setup_scripts/install_packages

echo "Backing up old config files"
backup ~/.vimrc
backup ~/.tmux.conf
backup ~/.zshrc

echo "Setting up new config files"
source_config vim/.vimrc .vimrc
source_config tmux/.tmux.conf .tmux.conf
source_config_wpath zsh/zshrc_manager.sh .zshrc

source $PWD/setup_scripts/clone_repos

source $PWD/vim/install_plugins

source $PWD/setup_scripts/conf_terminal
